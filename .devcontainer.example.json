{
  "name": "NBNL - Nationale Energieregisters",
  "image": "ghcr.io/netbeheer-nederland/env-nationale-energieregisters:latest",
  "remoteUser": "devuser",
  "customizations": {
    "vscode": {
      "extensions": [
        "hediet.vscode-drawio"
      ],
      "settings": {
        "git.defaultCloneDirectory": "/workspace/"
        }
      }
    }
  },
  "postCreateCommand": "git config --global user.name 'Your Name' && git config --global user.email 'your@email-address.com'",
  "containerEnv": {
    "GH_TOKEN": "your-gh-pat-token"
  }
}
